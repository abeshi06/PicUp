<% @picturetests.each do |picturetest| %>
  <%= image_tag picturetest.picture.url, style: "width: 100%;" %>

  <br>
 	<p class="hintOpen btn waves-effect waves-light amber">
 		ヒント
 	</p>
  <div class="hint">
  	<b><%= picturetest.hint %></b>
  </div>
  <br>
 	<p class="answerOpen btn waves-effect waves-light red">
 		答え
 	</p>
  <div class="answer">
  	<b><%= picturetest.answer %></b>
  </div>

<% end %>

<%= paginate @picturetests %>

<div align="center">
  <%= link_to '戻る', picturetests_path, class: "btn waves-effect waves-light blue-grey" %>
</div>

<script type="text/javascript">
$(function(){
    $(".answer").css("display", "none");

    $(".answerOpen").click(function(){
        $(".answer").toggle();
    });
});
$(function(){
    $(".hint").css("display", "none");

    $(".hintOpen").click(function(){
        $(".hint").toggle();
    });
});
</script>