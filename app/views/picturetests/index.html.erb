<p id="notice"><%= notice %></p>

<h2 align="center"><%= link_to 'TESTSTART', test_picturetests_path %></h2>
<br>
<%= paginate @picturetests %>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ヒント</th>
      <th>解答</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picturetests.each do |picturetest| %>
      <tr>
        <td><%= picturetest.id %></td>
        <td><%= picturetest.hint %></td>
        <td><%= picturetest.answer %></td>
        <td><%= link_to '詳細', picturetest, class: "btn waves-effect waves-light" %></td>
        <td><%= link_to '更新', edit_picturetest_path(picturetest), class: "btn waves-effect waves-light" %></td>
        <td><%= link_to '削除', picturetest, method: :delete, data: { confirm: '削除しますか？' }, class: "btn waves-effect waves-light red" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @picturetests %>
<div align="center">
  <%= link_to '新規作成', new_picturetest_path, class: "btn waves-effect waves-light blue" %>
</div>
